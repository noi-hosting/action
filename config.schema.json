{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "config.schema.json",
  "title": "Config schema",
  "description": "Schema for .hosting/config.yaml file",
  "type": "object",
  "properties": {
    "project": {
      "description": "",
      "type": "object",
      "properties": {
        "parent": {
          "type": "string",
          "minLength": 1
        },
        "domain": {
          "type": "string",
          "examples": ["{app}-{ref}.preview.example.com"]
        },
        "prune": {
          "type": "boolean",
          "default": true
        },
        "pool": {
          "type": "string",
          "description": "The ID of the pool, also known as managed server on Hosting.de. Retrieve the pool ID from the admin panel."
        }
      },
      "required": ["parent"],
      "additionalProperties": false
    },
    "applications": {
      "type": "object",
      "propertyNames": {
        "pattern": "^[a-z0-9]+$"
      },
      "additionalProperties": {
        "type": "object",
        "properties": {
          "account": {
            "type": "string",
            "description": "The (sub-)account ID on Hosting.de. Retrieve the account ID from the admin panel."
          },
          "php": {
            "type": "object",
            "properties": {
              "version": {
                "type": "string",
                "pattern": "^\\d\\.\\d$"
              },
              "extensions": {
                "type": "array",
                "items": {
                  "type": "string",
                  "enum": ["apcu", "imagick", "memcached", "oauth", "redis"]
                },
                "minItems": 1,
                "uniqueItems": true
              },
              "ini": {
                "type": "object",
                "minProperties": 1,
                "propertyNames": {
                  "pattern": "^[a-z:._]+$"
                }
              }
            },
            "additionalProperties": false,
            "required": ["version"]
          },
          "env": {
            "type": "object",
            "minProperties": 1,
            "propertyNames": {
              "pattern": "^[A-Za-z0-9-_]+$"
            }
          },
          "relationships": {
            "type": "object",
            "description": "Relationships are services that are made available to your application, usually by means of environment variables. Use the <SERVICE>:<ENDPOINT> syntax. Examples include: \"database:app1\" for referencing a database endpoint with name \"app1\", or \"redis\" for referencing a redis service (no endpoints available). The key of the relationship will be used to reference the environment variable. For instance a relation named \"database\" becomes \"DATABASE_URL\".",
            "minProperties": 1,
            "propertyNames": {
              "pattern": "^[a-z0-9-_]+$"
            },
            "additionalProperties": {
              "type": "string",
              "pattern": "^[a-z0-9]+(:[a-z0-9]+)?$"
            }
          },
          "sync": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "minItems": 1,
            "uniqueItems": true
          },
          "web": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "root": {
                  "type": "string",
                  "pattern": "^[^/].+[^/]$"
                },
                "domainName": {
                  "type": "string",
                  "default": "{default}",
                  "pattern": "^([a-z0-9.\\-]|\\{default\\}|\\{app\\}|\\{ref\\})+$"
                },
                "parentDomainName": {
                  "type": "string",
                  "default": "",
                  "pattern": "^([a-z0-9.\\-])+$"
                },
                "www": {
                  "type": "boolean",
                  "default": true
                },
                "locations": {
                  "type": "object",
                  "minProperties": 1,
                  "additionalProperties": {
                    "type": "object",
                    "properties": {
                      "passthru": {
                        "oneOf": [
                          {
                            "type": "boolean"
                          },
                          {
                            "type": "string",
                            "pattern": "^/.+[^/]$"
                          }
                        ],
                        "default": false,
                        "examples": ["/index.php", "/app.php"]
                      },
                      "expires": {
                        "type": "string",
                        "examples": ["1h"]
                      },
                      "allow": {
                        "type": "boolean",
                        "default": true
                      },
                      "immutable": {
                        "type": "boolean",
                        "default": false
                      }
                    }
                  }
                }
              },
              "required": ["locations"],
              "additionalProperties": false
            },
            "minItems": 1
          },
          "cron": {
            "type": "array",
            "items": {
              "type": "object",
              "allOf": [
                {
                  "oneOf": [
                    {
                      "properties": {
                        "cmd": {
                          "type": "string"
                        }
                      },
                      "required": ["cmd"],
                      "not": {
                        "required": ["php"]
                      }
                    },
                    {
                      "properties": {
                        "php": {
                          "type": "string"
                        }
                      },
                      "required": ["php"],
                      "not": {
                        "required": ["cmd"]
                      }
                    }
                  ]
                },
                {
                  "oneOf": [
                    {
                      "properties": {
                        "every": {
                          "type": "string",
                          "enum": [
                            "1min",
                            "5min",
                            "10min",
                            "15min",
                            "30min",
                            "1hour",
                            "2hour",
                            "3hour",
                            "4hour",
                            "6hour",
                            "12hour"
                          ]
                        }
                      },
                      "required": ["every"],
                      "not": {
                        "required": ["on"]
                      }
                    },
                    {
                      "properties": {
                        "every": {
                          "const": "day"
                        },
                        "on": {
                          "type": "string",
                          "enum": ["1-5", "5-9", "9-13", "13-17", "17-21", "21-1"]
                        }
                      },
                      "required": ["every", "on"]
                    },
                    {
                      "properties": {
                        "every": {
                          "const": "week"
                        },
                        "on": {
                          "type": "string",
                          "enum": ["Mon", "Tue", "Wed", "Thu", "Fri", "Sat", "Sun"]
                        }
                      },
                      "required": ["every", "on"]
                    },
                    {
                      "properties": {
                        "every": {
                          "const": "month"
                        },
                        "on": {
                          "type": "integer",
                          "minimum": 1,
                          "maximum": 31
                        }
                      }
                    }
                  ]
                }
              ]
            },
            "minItems": 1
          },
          "users": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^[\\w ]+$"
            },
            "minItems": 1
          }
        },
        "required": ["php"],
        "additionalProperties": false
      },
      "minProperties": 1
    },
    "databases": {
      "type": "object",
      "properties": {
        "schemas": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[a-z0-9]+$"
          },
          "minItems": 1,
          "uniqueItems": true,
          "description": "The databases, also referred to as <SCHEMA>, to provide to the applications."
        },
        "endpoints": {
          "type": "object",
          "minProperties": 1,
          "propertyNames": {
            "pattern": "^[a-z0-9]+$"
          },
          "additionalProperties": {
            "type": "string",
            "pattern": "^[a-z0-9]+(:(admin|ro|rw))?$",
            "description": "Use <SCHEMA>:<ACCESS_LEVEL> notation here, which means, that the given endpoint can access <SCHEMA> with <ACCESS_LEVEL> permissions."
          }
        }
      },
      "additionalProperties": false
    },
    "users": {
      "type": "object",
      "minProperties": 1,
      "propertyNames": {
        "pattern": "^[\\w ]+$"
      },
      "additionalProperties": {
        "type": "object",
        "properties": {
          "key": {
            "type": "string",
            "pattern": "^ssh-rsa .+$"
          },
          "role": {
            "type": "string",
            "enum": ["admin", "contributor"],
            "default": "contributor"
          }
        }
      }
    }
  },
  "required": ["project", "applications"],
  "additionalProperties": false
}
